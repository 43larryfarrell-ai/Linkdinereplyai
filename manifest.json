{
  "manifest_version": 3,
  "name": "LinkedIn Reply AI",
  "version": "1.0.0",
  "description": "AI-powered reply suggestions for LinkedIn posts using Google Gemini",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}

